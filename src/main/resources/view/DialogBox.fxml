<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="5" maxHeight="30.0">
            <children>
                <Label fx:id="dialog"
                       text="Label"
                       wrapText="true"
                       minHeight="-Infinity"
                       maxWidth="240.0" />
            </children>
            <padding>
                <Insets top="7.0" right="10.0" bottom="7.0" left="10.0"/>
            </padding>
            <style>
                -fx-background-color: lightgray;
                -fx-background-radius: 10;
            </style>
        </VBox>
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" >
            <HBox.margin>
                <Insets top="0" right="5.0" bottom="0" left="5.0"/>
            </HBox.margin>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</fx:root>
